{
  "name": "websocket-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "cd server && pnpm run start:dev",
    "client": "cd client && pnpm run start:dev",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "cd client && pnpm run build",
    "build:server": "cd server && pnpm run build",
    "start": "pnpm run build:server && cd server && pnpm run start:prod",
    "install:all": "pnpm install && cd client && pnpm install && cd ../server && pnpm install",
    "docker:build": "docker build -t ikigai-chat-hosted .",
    "docker:run": "docker run -p 3001:3001 ikigai-chat-hosted:latest",
    "docker:clean": "docker system prune -f",
    "render:deploy": "echo 'Push to main branch to trigger Render deployment'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "concurrently": "^9.2.0"
  }
}
